
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
   id        Int      @id @default(autoincrement())
  clerkId    String  @unique
  photo      String  
  username  String   @unique 
  firstName String   
  lastName  String   
  email      String  @unique
  cards       Card[]
   @@index([id])
}
model Card{
  id        Int      @id @default(autoincrement())
  authorId  Int      
  title     String   
  status    String
  priority  String
  description String
  deadline    String
  createdAt    String
  user    User @relation( fields: [authorId],references: [id])
   @@index([id])
}